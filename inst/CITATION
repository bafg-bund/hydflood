citHeader("To cite hydflood in publications, please use:")

citEntry(entry = "Article",
  title        = "hydflood - Algorythms to compute flood extent and duration along German federal waterways Elbe and Rhine",
  author       = personList(as.person("Arnd Weber"),
                            as.person("Stephan Rosenzweig")),
  journal      = "Journal of Ecohydraulics",
  year         = "2020",
  volume       = "1",
  number       = "1",
  pages        = "1--1",
  url          = "https://hydflood.bafg.de/index.html",

  textVersion  =
  paste0("Weber, A., & Rosenzweig, S. (2020): hydflood - Algorythms to ",
         "compute flood extent and duration along German federal waterways ",
         "Elbe and Rhine. URL https://hydflood.bafg.de/index.html.")
)
