citHeader("To cite hydflood in publications, please use:")

citEntry(
  entry    = "Article",
  title    = "hyd1d and hydflood - R packages to compute water levels and flood durations along the rivers Rhine and Elbe, Germany",
  author   = c(person("Arnd", "Weber"),
               person("Marcus", "Hatz"),
               person("Wiebke", "Schramm"),
               person("Stephan", "Rosenzweig")),
  journal  = "Ecohydrology & Hydrobiology",
  year     = "submitted",
  textVersion = paste0(
    "Weber, A., Hatz, M., Schramm, W., & Rosenzweig, S. (submitted): hyd1d and",
    " hydflood - R packages to compute  water levels and flood durations along",
    " the rivers Rhine and Elbe, Germany. Ecohydrology & Hydrobiology.")
)

citEntry(entry = "Misc",
  title        = "hydflood - Flood Extents and Durations along the Rivers Elbe and Rhine",
